@model School_website.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .btn-custom {
    background-color: #ff5722;
    border-color: #ff5722;
    }

    .btn-custom:hover {
    background-color: #e64a19;
    border-color: #e64a19;
    }

    .login-box {
    max-width: 400px;
    margin: auto;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="login-box bg-white p-4 shadow rounded" style="width: 350px;">
        <h4 class="text-center fw-bold">Login</h4>

        <!-- Notification Alert (Hidden by Default) -->
        <div id="alertBox" class="alert alert-danger d-none" role="alert">
            Invalid email or password!
        </div>

        <!-- Login Form -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="Login" asp-controller="Account" asp-antiforgery="true">

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control"  placeholder="Enter email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label">
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn w-100 text-white btn-custom" value="Login">Login</button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}


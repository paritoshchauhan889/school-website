@{
    ViewData["Title"] = "Contact Us";
}
<style>
    .btn-custom {
        background-color: #ff5722;
        border-color: #ff5722;
    }

        .btn-custom:hover {
            background-color: #e64a19; /* Darker shade for hover effect */
            border-color: #e64a19;
        }
      
</style>

<div class="container vh-90 d-flex justify-content-center align-items-center">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3">
            <div class="p-4">
                <h3 class="text-center  mb-4">Contact Us</h3>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label fw-semibold">Name</label>
                        <input type="text" class="form-control form-control-lg" id="name" placeholder="Enter your name" required />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control form-control-lg" id="email" placeholder="Enter your email" required />
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label fw-semibold">Message</label>
                        <textarea class="form-control form-control-lg" id="message" rows="5" placeholder="Your message..." required></textarea>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-custom text-white btn-lg rounded-pill">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
